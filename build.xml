<?xml version="1.0"?>
<project name="DFO Planner" default="compile" basedir=".">

	<property name="src" value="./source"/>
	<property name="build" value="build" />

	<target name="init">
		<mkdir dir="${build}"/>
	</target>

	<target name="compile" depends="init">
		<!-- Compile the code -->

		<javac srcdir="${src}" destdir="${build}"/>
	</target>
</project>
